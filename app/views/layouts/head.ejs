<body class="penn">

<header>
	<div class="middle group">
		<h1><a href="/">Penn</a></h1>
		<p>
			<% if (currentUser) { %>
				<%= currentUser.email.split("@")[0] %> <a href="/logout?x=<%= Math.floor((Math.random()*100)+1) %>" class="login-out">(Logout)</a>
			<% } else { %>
				<a href="/login?x=<%= Math.floor((Math.random()*100)+1) %>" class="login-out">Login</a>
			<% } %>
			<a href="/new" class="link-button">New post</a>
		</p>
	</div>
</header>

