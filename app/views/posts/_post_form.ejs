<form action="/posts/create" method="post" class="postForm leftForm group">
	<p class="group email">
		<label for="email">Email:</label>
		<input type="email" name="email" placeholder="yourname@something.upenn.edu" value="<%= email ? email : '' %>" />
	</p>
	<p class="group title">
		<label for="title" class="title">Title:</label>
		<input type="text" name="title" class="title" />
	</p>
	<p class="group text">
		<label for="text">Text:</label>
		<textarea name="text"></textarea>
	</p>
	<input type="submit" value="Post" />
</form>